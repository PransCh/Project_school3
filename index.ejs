<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My app</title>
    <style>
        .topic { font-size: 50px; text-decoration: none; }
    </style>
</head>

<body>
        <center>
            <nav>
                <a href="/" class="topic" >Monuments</a>
                <a href="/resort1">Resorts</a>
                <a href="/museums1">Museums</a>
            </nav>
        </center>
    <ul class="monuments">
        <center>
                        <th style="width: 20%">MONUMENT NAMES </th>
                        <th style="width: 20%">MONUMENT ID </th>
                        <th style="width: 50%">LOCATION </th>
                        <th style="width: 10%">FEE </th>
                        <br>
                        <br>
                    <% for(var i = 0; i < monuments.length; i++) {%>
                        <tr style="text-align: center">
                            <td>
                                <%= monuments[i].Name  %>
                            </td>
                            <td>
                                <%= monuments[i].Id  %>
                            </td>
                            <td>
                                <%= monuments[i].Location  %>
                            </td>
                            <td>
                                <%= monuments[i].Fee  %>
                            </td>
                        </tr>
                        <br>
                      <% } %>
      </ul>
      
</body>
</html>